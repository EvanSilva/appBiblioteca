<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rvExhibitor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HallBookstore">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBookExhibitor"
            android:layout_width="410dp"
            android:layout_height="644dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etFiltrado"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/etFiltrado"
            android:layout_width="217dp"
            android:layout_height="46dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Buscar por Autor o Titulo"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnQrSearch"
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_marginStart="12dp"
            android:text="Buscar por QR"
            app:layout_constraintStart_toEndOf="@+id/etFiltrado"
            app:layout_constraintTop_toTopOf="@+id/etFiltrado" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
